<% book.book_comments.each do |comment| %>
  <tr>
    <td>
      <%= link_to user_path(comment.user.id) do%>
        <%= image_tag comment.user.get_profile_image, size: '50x50' %><br>
        <%= comment.user.name %>
      <% end %>
    </td>
    <td>
      <%= comment.comment %>
    </td>
    <% if comment.user == current_user %>
      <td>
        <%= link_to "Destroy", book_book_comment_path(comment.book, comment), remote:true, method: :delete, class: "btn btn-sm btn-danger" %>
      </td>
    <% end %>
  </tr>
<% end %>

